<% @users.each do |u| %>
	<div class="userlist">
	<h1 style="color: white; text-align: center;"><%= u.nickname %> </h1>
	<br/>
	<p style="color: white; text-align: center;">
	
	<!-- <%= image_tag u.avatar.url(:medium) %> -->
	<%if u.avatar_file_name.blank? %>
		<%= image_tag "no_user_image.png", size: "100x100"%>
	<%else%>
		<%= image_tag u.avatar.url(:medium) %>
<% end %>
	<br/>
	<br/>
	<%= u.gender %>
	<%= u.age %>
	<%= u.city %>
	</p>
	<p style="color: white; text-align: center;">Description:
	<br/>
	<%= u.description %>
	</p>
	<br/>
	</div>
<% end %>