<center style="color: white; text-align: center;">
<p id="notice"><%= notice %></p>

<p  style="color: white; text-align: center;">
  <strong>Address:</strong>
  <%= @location.address %>
</p>

<p  style="color: white; text-align: center;">
  <strong>Latitude:</strong>
  <%= @location.latitude %>
</p>

<p  style="color: white; text-align: center;">
  <strong>Longitude:</strong>
  <%= @location.longitude %>
</p>
<%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@location.latitude}%2C#{@location.longitude}" %>
<h3  style="color: white; text-align: center;">Nearby locations</h3>
<ul>
<% for location in @location.nearbys(50) %>
  <li><%= link_to location.address, location %> (<%= location.distance.round(2) %> miles)</li>
<% end %>
</ul>

<%= link_to 'Edit', edit_location_path(@location) %> |
<%= link_to 'Back', locations_path %>
</center>