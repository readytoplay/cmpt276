<h2 class="cwhite">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
 
   <div class="field cwhite">
   <%= f.label :nickname %><br/>
   <%= f.text_field :nickname %>
  </div>

  <div class="field cwhite">
     <%= f.label :email %><br />
     <%= f.email_field :email, autofocus: true %>
   </div>
 
 <div class="field cwhite">
    <%= f.label :age %><br/>
    <%= f.text_field :age %>
  </div>

  <div class="field cwhite">
    <%= f.label :gender %><br/>
    <%= f.text_field :gender %>
  </div>

  <div class="field cwhite">
    <%= f.label :city %><br/>
    <%= f.text_field :city %>
  </div>
  
  <div class="field cwhite">
    <%= f.label :description %><br/>
    <%= f.text_field :description %>
  </div>

  <div class="field cwhite">  
    <%= f.label :image %><br/>
    <%= f.file_field :avatar %> 
  </div>

   <div class="actions cwhite">
     <%= f.submit "Sign up" %>
   </div>

<% end %>

<%= render "devise_users/shared/links" %>